            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAttributes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/rightGD"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/productDetailsInfoTV"
                bind:itemCount="1" />

            <TextView
                android:id="@+id/ratingReviewTV"
                style="@style/TitleTextProductDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_10"
                android:text="@string/product_ratings_and_reviews"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/textViewPostReview"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewAttributes"
                app:layout_goneMarginTop="@dimen/dimen_15" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toStartOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/productDiscountTV" />

            <TextView
                android:id="@+id/textViewPostReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rate_us_bg"
                android:drawableEnd="@drawable/ic_star_boardered"
                android:drawablePadding="@dimen/dimen_5"
                android:fontFamily="@font/helvetica_neue_bold"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_6"
                android:paddingEnd="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_6"
                android:text="@string/post_a_review"
                android:textColor="@color/greyTextNormal"
                android:textSize="@dimen/font_13"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintTop_toTopOf="@+id/ratingReviewTV" />

            <androidx.constraintlayout.widget.Group
                viewGroupDataBasedVisibility="@{productDetailViewModel.product.isDiscountAvailable()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="productDiscountDropDownIV,productDiscountTV,viewDiscount,viewClickEnablerDiscountDetails" />

            <TextView
                android:id="@+id/ratingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/helvetica_neue_bold"
                android:includeFontPadding="false"
                android:text="@{Integer.toString(productDetailViewModel.product.rating)}"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/ratingReviewTV" />

            <TextView
                android:id="@+id/ratingOutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/helvetica_neue_bold"
                android:includeFontPadding="false"
                android:text="@string/out_of_5"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/ratingTV" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/productRatingRB"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:isIndicator="true"
                android:max="5"
                android:progressTint="@color/greyTextNormal"
                android:rating="@{productDetailViewModel.product.rating}"
                app:layout_constraintBottom_toTopOf="@+id/totalRatingsTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@id/leftGD" />

            <TextView
                android:id="@+id/totalRatingsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:includeFontPadding="false"
                android:text="@{@string/total_ratings(Integer.toString(productDetailViewModel.product.reviews.reviewTotal))}"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/ratingOutTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD" />

            <TextView
                android:id="@+id/seeAllRatingsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:text="@string/view_all"
                android:textColor="@color/black_text_selector"
                android:textSize="@dimen/font_14"
                android:visibility="@{productDetailViewModel.product.reviews.reviewList.size()>1?View.VISIBLE : View.GONE }"
                app:layout_constraintBottom_toBottomOf="@+id/ratingOutTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintTop_toTopOf="@+id/ratingTV" />

            <include
                android:id="@+id/productRatingCV"
                layout="@layout/product_rating_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:visibility="@{productDetailViewModel.isProductReviewListVisibile?View.VISIBLE : View.GONE }"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/ratingOutTV"
                bind:review="@{productDetailViewModel.reviewItem}" />

            <!--<androidx.recyclerview.widget.RecyclerView
                id
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/ratingOutTV"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />-->

            <TextView
                android:id="@+id/moreCategoryTV"
                style="@style/TitleTextProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/more_in_this_category"
                android:visibility="@{productDetailViewModel.isMoreProductInCategoryVisible? View.VISIBLE : View.GONE  }"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/productRatingCV" />

            <TextView
                android:id="@+id/viewAllMoreCategoryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:text="@string/view_all"
                android:textColor="@color/black_text_selector"
                android:textSize="14sp"
                android:visibility="@{productDetailViewModel.isMoreProductInCategoryVisible? View.VISIBLE : View.GONE  }"
                app:layout_constraintBottom_toBottomOf="@+id/moreCategoryTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintTop_toTopOf="@+id/moreCategoryTV" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moreCategoryRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                android:visibility="@{productDetailViewModel.isMoreProductInCategoryVisible? View.VISIBLE : View.GONE  }"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/moreCategoryTV" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:visibility="@{productDetailViewModel.isMoreProductInCategoryLoadingProgress()? View.VISIBLE : View.GONE  }"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/moreCategoryTV" />

            <TextView
                android:id="@+id/relatedProductsTV"
                style="@style/TitleTextProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/related_products"
                android:visibility="@{productDetailViewModel.isRelatedProductVisible? View.VISIBLE : View.GONE  }"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/moreCategoryRV" />

            <TextView
                android:id="@+id/viewAllrelatedProductsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:text="@string/view_all"
                android:textColor="@color/black_text_selector"
                android:textSize="@dimen/font_14"
                android:visibility="@{productDetailViewModel.isRelatedProductVisible? View.VISIBLE : View.GONE  }"
                app:layout_constraintBottom_toBottomOf="@+id/relatedProductsTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintTop_toTopOf="@+id/relatedProductsTV" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/relatedProductsRV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:nestedScrollingEnabled="false"
                android:visibility="@{productDetailViewModel.isRelatedProductVisible? View.VISIBLE : View.GONE  }"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/relatedProductsTV" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_20"
                android:visibility="@{productDetailViewModel.isRelatedProductLoadingProgress()? View.VISIBLE : View.GONE  }"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/relatedProductsTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>