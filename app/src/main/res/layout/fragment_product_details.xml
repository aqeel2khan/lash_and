<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="productDetailViewModel"
            type="com.cosmetics.lush.ui.products.product_details.ProductDetailsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/productImagePager"
                setImageSlider="@{productDetailViewModel.product.getImageList()}"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/dimen_3"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent" />

            <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productImagePager"
                app:piv_animationType="scale"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="@color/colorAccent"
                app:piv_unselectedColor="@color/grey_300"
                app:piv_viewPager="@id/productImagePager"
                attrs:piv_padding="3dp"
                attrs:piv_radius="3dp" />

            <ImageView
                android:id="@+id/imageViewWishList"
                setWishListImage="@{productDetailViewModel.productWishListStatus}"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/oval_grey_bg"
                android:elevation="1dp"
                android:onClick="@{()->productDetailViewModel.handleWishListClick()}"
                android:padding="@dimen/dimen_7"
                android:paddingTop="@dimen/dimen_7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/productImagePager"
                app:srcCompat="@drawable/ic_favourite" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp" />

            <TextView
                android:id="@+id/productNameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/helvetica_neue_bold"
                android:text="@{productDetailViewModel.product.formattedName}"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/rightGD"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/pageIndicatorView" />

            <TextView
                android:id="@+id/textViewProductCode"
                style="@style/TitleTextProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_5"
                android:text="@string/product_code"
                android:textSize="@dimen/font_13"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/stockStatusTV"
                app:layout_constraintEnd_toStartOf="@+id/productSubTitleTV"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/stockStatusTV"
                app:layout_constraintTop_toTopOf="@+id/stockStatusTV" />

            <TextView
                android:id="@+id/productSubTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_neue_bold"
                android:maxLines="4"
                android:text="@{productDetailViewModel.product.model}"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/font_13"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/textViewProductCode" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.63" />

            <TextView
                android:id="@+id/textViewAvailability"
                style="@style/TitleTextProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:text="@string/availability_with_semicolon"
                android:textSize="@dimen/font_13"
                app:layout_constraintBottom_toBottomOf="@+id/stockStatusTV"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toTopOf="@+id/stockStatusTV" />

            <TextView
                android:id="@+id/stockStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/black_box_filled_bg"
                android:fontFamily="@font/helvetica_neue"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3sp"
                android:text="@{productDetailViewModel.product.stockStatus}"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/textViewAvailability"
                app:layout_constraintTop_toBottomOf="@+id/productNameTV"
                tools:text="In Stock" />

            <TextView
                android:id="@+id/productDiscountedPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:fontFamily="@font/helvetica_neue_bold"
                android:text="@{productDetailViewModel.product.getFinalePriceWithFormatted()}"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/stockStatusTV"
                tools:text="KD 200" />

            <TextView
                android:id="@+id/productOriginalPriceTV"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:text="@{productDetailViewModel.product.priceExcludingTaxFormated}"
                android:textColor="@color/grey_400"
                android:textSize="14sp"
                android:visibility="@{productDetailViewModel.product.isSpecialPriceAvailable()? View.VISIBLE: View.GONE}"
                app:layout_constraintBottom_toBottomOf="@+id/productDiscountedPriceTV"
                app:layout_constraintStart_toEndOf="@+id/productDiscountedPriceTV"
                app:layout_constraintTop_toTopOf="@+id/productDiscountedPriceTV" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/productReviewRB"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:isIndicator="true"
                android:max="5"
                android:progressTint="@android:color/black"
                android:rating="@{productDetailViewModel.product.rating}"
                app:layout_constraintStart_toEndOf="@id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/productDiscountedPriceTV" />

            <TextView
                android:id="@+id/productReviewsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/helvetica_neue"
                android:text="@{@string/no_reviews(Integer.toString(productDetailViewModel.product.reviews.reviewTotal))}"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/productReviewRB"
                app:layout_constraintStart_toEndOf="@id/productReviewRB"
                app:layout_constraintTop_toTopOf="@+id/productReviewRB" />

            <TextView
                android:id="@+id/totalPriceTV"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/black_box_stroke_bg"
                android:fontFamily="@font/helvetica_neue_bold"
                android:gravity="center"
                android:text="@{@string/total_in_kd(productDetailViewModel.totalAmount)}"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/productCounter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productReviewRB" />

            <com.cosmetics.lush.ui.common_views.ProductCounter
                android:id="@+id/productCounter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/totalPriceTV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/totalPriceTV"
                app:layout_constraintTop_toTopOf="@+id/totalPriceTV" />

            <TextView
                android:id="@+id/addToCartTV"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:fontFamily="@font/helvetica_neue_bold"
                android:gravity="center"
                android:text="@string/add_to_cart"
                android:textColor="@color/white_text_selector"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalPriceTV" />

            <TextView
                android:id="@+id/productDetailsTV"
                style="@style/TitleTextProductDetails"
                viewDataBasedVisibility="@{productDetailViewModel.product.description}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:text="@string/product_details"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewDiscount" />

            <TextView
                android:id="@+id/productDiscountTV"
                style="@style/TitleTextProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:text="@string/discounts"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/addToCartTV" />

            <ImageView
                android:id="@+id/productDetailsDropDownIV"
                viewDataBasedVisibility="@{productDetailViewModel.product.description}"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/productDetailsTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintTop_toTopOf="@+id/productDetailsTV"
                app:srcCompat="@drawable/ic_down_arrow_grey" />

            <ImageView
                android:id="@+id/productDiscountDropDownIV"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/productDiscountTV"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintTop_toTopOf="@+id/productDiscountTV"
                app:srcCompat="@drawable/ic_down_arrow_grey" />

            <WebView
                android:id="@+id/productDetailsInfoTV"
                loadHtml="@{productDetailViewModel.product.description}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.1"
                android:paddingBottom="10dp"
                android:textColor="@color/grey_600"
                app:layout_constraintEnd_toStartOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/leftGD"
                app:layout_constraintTop_toBottomOf="@+id/productDetailsTV" />

            <View
                android:id="@+id/view"
                viewDataBasedVisibility="@{productDetailViewModel.product.description}"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"
                android:background="@color/underLineColor"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/productDetailsTV"
                app:layout_constraintEnd_toStartOf="@+id/productDetailsDropDownIV"
                app:layout_constraintStart_toEndOf="@+id/productDetailsTV"
                app:layout_constraintTop_toTopOf="@+id/productDetailsTV" />

            <View
                android:id="@+id/viewDiscount"
                viewDataBasedVisibility="@{productDetailViewModel.product.description}"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"
                android:background="@color/underLineColor"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/productDiscountTV"
                app:layout_constraintEnd_toStartOf="@+id/productDetailsDropDownIV"
                app:layout_constraintStart_toEndOf="@+id/productDiscountTV"
                app:layout_constraintTop_toTopOf="@+id/productDiscountTV" />

            <View
                android:id="@+id/viewClickEnablerProductDetails"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dimen_10"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/productDetailsTV"
                app:layout_constraintEnd_toEndOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/productDetailsTV"
                app:layout_constraintTop_toTopOf="@+id/productDetailsTV" />

            <View
                android:id="@+id/viewClickEnablerDiscountDetails"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dimen_10"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/productDiscountTV"
                app:layout_constraintEnd_toEndOf="@+id/rightGD"
                app:layout_constraintStart_toEndOf="@+id/productDiscountTV"
                app:layout_constraintTop_toTopOf="@+id/productDiscountTV" />
